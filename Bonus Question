#include <iostream>
using namespace std;

int main() {
    int a, b;

    cout << "Enter first number: ";
    cin >> a;
    cout << "Enter second number: ";
    cin >> b;

    cout << "\nBefore swapping:" << endl;
    cout << "a = " << a << endl;
    cout << "b = " << b << endl;

    // Swapping using only arithmetic operators
    a = a + b;
    b = a - b;
    a = a - b;

    cout << "\nAfter swapping:" << endl;
    cout << "a = " << a << endl;
    cout << "b = " << b << endl;

    // Explanation:
    // Here we didnâ€™t use a third variable.
    // We just added and subtracted to switch their values.

    return 0;
}
