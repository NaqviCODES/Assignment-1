#include <iostream>
#include <iomanip> // for setw and setprecision
using namespace std;

int main() {
    float s1, s2, s3, s4, s5;

    cout << "Enter marks for 5 subjects (out of 100):" << endl;
    cout << "Subject 1: ";
    cin >> s1;
    cout << "Subject 2: ";
    cin >> s2;
    cout << "Subject 3: ";
    cin >> s3;
    cout << "Subject 4: ";
    cin >> s4;
    cout << "Subject 5: ";
    cin >> s5;

    float total = s1 + s2 + s3 + s4 + s5;
    float percentage = (total / 500) * 100;
    string grade;

    // Grade checking using if-else
    if (percentage >= 90)
        grade = "A+";
    else if (percentage >= 80)
        grade = "A";
    else if (percentage >= 70)
        grade = "B";
    else if (percentage >= 60)
        grade = "C";
    else if (percentage >= 50)
        grade = "D";
    else
        grade = "F";

    // Ternary operator for pass/fail
    string result = (percentage >= 50) ? "Pass" : "Fail";

    cout << "\n---------- Report Card ----------" << endl;
    cout << setw(15) << left << "Total Marks:" << total << endl;
    cout << setw(15) << left << "Percentage:" << fixed << setprecision(2) << percentage << "%" << endl;
    cout << setw(15) << left << "Grade:" << grade << endl;
    cout << setw(15) << left << "Result:" << result << endl;
    cout << "---------------------------------" << endl;

    /*
       Note:
       - setw() is used to align text properly.
       - setprecision(2) shows only 2 digits after decimal.
       - The ternary operator (?:) checks if the student passed or failed.
    */

    return 0;
}









